<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ToolBar菜单样式 -->
    <style name="BaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@color/window_content</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:elevation">@dimen/dp_0</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ToolbarTheme</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubTitleTextAppearance</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- 菜单选项文字颜色 -->
        <item name="actionMenuTextColor">@color/text_content</item>
        <!-- 菜单选项文字尺寸 -->
        <item name="android:textSize">@dimen/sp_14</item>
        <!-- 标题颜色-->
        <item name="android:textColorPrimary">@color/text_title</item>
        <item name="android:textColorSecondary">@color/text_title_sub</item>
    </style>

    <!-- ToolBar标题文字样式 -->
    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ToolBar附标题文字样式 -->
    <style name="ToolbarSubTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_title_sub</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!--Tab样式-->
    <style name="BaseTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">@color/window_content</item>
        <item name="tabIndicatorColor">@color/app_theme</item>
        <item name="tabIndicatorHeight">@dimen/dp_2</item>
        <item name="tabTextAppearance">@style/BaseTabTextAppearance</item>
        <item name="tabTextColor">@color/text_title</item>
        <item name="tabSelectedTextColor">@color/app_theme</item>
    </style>

    <!--Tab字体样式-->
    <style name="BaseTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/sp_14</item>
        <!--这里设置无效-->
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--基础Dialog样式-->
    <style name="BaseDialog" parent="@style/AlertDialog.AppCompat.Light">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@color/transparent</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--基础Button样式-->
    <style name="BaseButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/dp_0</item>
        <item name="android:minHeight">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- 圆角图片 -->
    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
